<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User"
    android:background="@drawable/bacground_home"
    android:orientation="vertical"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="27dp"
            android:src="@drawable/back" />

        <TextView
            android:textColor="#E2FFFFFF"
            android:id="@+id/textview"
            android:text="Profile"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative"
        android:background="@drawable/dentrong"
        android:layout_below="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
          <TextView
              android:id="@+id/textview1"
              android:textColor="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Nguyễn Văn Thanh Nhân"
              android:gravity="center"
              android:textSize="22dp"/>
          <LinearLayout

              android:orientation="horizontal"
              android:layout_below="@+id/textview1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              >
              <LinearLayout
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  >
                  <TextView
                      android:gravity="center"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textColor="@color/white"
                      android:text="thnahnhan@gmail.com"
                      />
                  <TextView
                      android:gravity="center"
                      android:textSize="17dp"
                      android:textColor="@color/white"
                      android:text="1"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>
                  <ImageView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:src="@android:drawable/checkbox_on_background"
                      />
              </LinearLayout>
              <LinearLayout
                  android:orientation="vertical"
                  android:layout_weight="1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:text="0328523609"/>
                    <TextView
                      android:gravity="center"
                      android:textSize="17dp"
                      android:textColor="@color/white"
                      android:text="0"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>
                   <ImageView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:src="@android:drawable/checkbox_off_background"
                      />
              </LinearLayout>

          </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:background="@drawable/trangtrong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative"
        >
        <LinearLayout
            android:id="@+id/linerlayout"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="17dp"
                android:layout_margin="2dp"
                android:text="Target name"
                android:textColor="#F3DD1F"
                android:layout_width="75dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="17dp"
                android:layout_margin="2dp"
                android:text="Start date"
                android:textColor="#F3DD1F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="16dp"
                android:layout_margin="2dp"
                android:text="End date"
                android:textColor="#F3DD1F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="16dp"
                android:layout_margin="2dp"
                android:text="Target"
                android:textColor="#F3DD1F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="16dp"
                android:layout_margin="2dp"
                android:text="Used"
                android:textColor="#F3DD1F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <RelativeLayout
            android:background="@drawable/dentrong"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/linerlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:layout_margin="2dp"
                    android:text="2 Week"
                    android:textColor="#FFFFFE"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:layout_margin="2dp"
                    android:text="22/01/2020"
                    android:textColor="#FFFFFE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:layout_margin="2dp"
                    android:text="27/02/2021"
                    android:textColor="#FFFFFE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:layout_margin="2dp"
                    android:text="30"
                    android:textColor="#FFFFFE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:layout_margin="2dp"
                    android:text="2"
                    android:textColor="#43A047"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>