<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Achievement"
    android:background="@drawable/bacground_home"
    android:padding="10dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="27dp"
            android:src="@drawable/back" />

        <TextView
            android:textColor="#E2FFFFFF"
            android:id="@+id/textview"
            android:text="Achievenment"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            />
    </LinearLayout>
    <RelativeLayout

        android:layout_marginTop="10dp"
        android:background="@drawable/trangtrong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textview"
        >
        <LinearLayout
            android:id="@+id/linerlayout"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="17dp"
                android:layout_margin="2dp"
                android:text="Target name"
                android:textColor="#F3DD1F"
                android:layout_width="75dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="17dp"
                android:layout_margin="2dp"
                android:text="Start date"
                android:textColor="#F3DD1F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="16dp"
                android:layout_margin="2dp"
                android:text="End date"
                android:textColor="#F3DD1F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="16dp"
                android:layout_margin="2dp"
                android:text="Target"
                android:textColor="#F3DD1F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="16dp"
                android:layout_margin="2dp"
                android:text="Used"
                android:textColor="#F3DD1F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/dentrong"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/linerlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:text="2 Week"
                    android:textColor="#FFFFFE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:text="22/01/2020"
                    android:textColor="#FFFFFE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:text="27/02/2021"
                    android:textColor="#FFFFFE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:text="30"
                    android:textColor="#FFFFFE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:text="2"
                    android:textColor="#02F60D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>