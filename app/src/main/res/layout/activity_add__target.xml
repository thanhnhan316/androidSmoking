<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bacground_home"
    android:padding="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="27dp"
            android:src="@drawable/back" />

        <TextView
            android:textColor="#E2FFFFFF"
            android:id="@+id/textview"
            android:text="Add target"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            />
    </LinearLayout>

    <TextView
        android:padding="10dp"
        android:gravity="center"
        android:textSize="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="--Choose your target--"
        android:background="@drawable/dentrong"
        android:textColor="#E2FFFFFF"/>
    <TextView
        android:textColor="#FFB300"
        android:gravity="left"
        android:textSize="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "Start date"
        android:layout_marginTop="12dp"
        />
    <EditText
        android:padding="10dp"
        android:gravity="center"
        android:textSize="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="01/01/2021"
        android:background="@drawable/dentrong"
        android:textColor="#E2FFFFFF"/>
    <TextView
        android:textColor="#FFB300"
        android:gravity="left"
        android:textSize="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="End date"
        android:layout_marginTop="12dp"
        />
    <EditText
        android:padding="10dp"
        android:gravity="center"
        android:textSize="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dentrong"
        android:textColor="#E2FFFFFF"/>
    <TextView
        android:textColor="#FFB300"
        android:gravity="left"
        android:textSize="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Count of cigarette"
        android:layout_marginTop="12dp"
        />
    <EditText
        android:padding="10dp"
        android:gravity="center"
        android:textSize="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dentrong"
        android:textColor="#E2FFFFFF"/>
    <Button
        android:id="@+id/button"
        android:background="@drawable/bogoc"
        android:padding="12dp"
        android:textColor="#D3161C22"
        android:gravity="center"
        android:textSize="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:layout_marginTop="30dp"
        />



</LinearLayout>